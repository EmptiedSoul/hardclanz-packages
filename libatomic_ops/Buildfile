PACKAGE="libatomic_ops"
VER="7.6.10"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DESCRIPTION="Atomic operations library"

DEPENDS=()
CONFLICTS=()

URL="https://github.com/ivmai/libatomic_ops/releases/download/v${VER}/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.gz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -c $SRCURL
}
__unpacksrc(){
    tar xzf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS \
	--enable-shared \
	--disable-static
}
__compilesrc(){
    make $MAKEOPTS
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
