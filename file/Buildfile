PACKAGE="file"
VER="5.40"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DESCRIPTION="Retrieves what does file contain"

DEPENDS=(glibc zlib xz bzip2)
CONFLICTS=()

URL="ftp://ftp.astron.com/pub/file/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.gz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -c $SRCURL
}
__unpacksrc(){
    tar xzf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS
}
__compilesrc(){
    make $MAKEOPTS
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
