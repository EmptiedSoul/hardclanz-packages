PACKAGE="sysklogd"
VER="1.5.1"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DEPENDS=()
CONFLICTS=()

URL="http://www.infodrom.org/projects/sysklogd/download/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.gz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -q $SRCURL
}
__unpacksrc(){
    tar xzf $SRCTGZ
}
__preparesrc(){
    #./configure $CONFIGUREOPTS
    sed -i 's/union wait status/int status/' syslogd.c
    true
}
__compilesrc(){
    make $MAKEOPTS CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS"
}
__installsrc(){
    mkdir -p $DEST/usr/sbin $DEST/usr/share/man/man8
    make $MAKEOPTS prefix="$DEST" install --ignore-errors
}
