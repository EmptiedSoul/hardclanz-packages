PACKAGE="python"
VER="3.8.5"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DESCRIPTION="Python3 interpreted general-purpose programing language"

DEPENDS=(bzip2 expat gdbm libffi openssl zlib)
CONFLICTS=()

URL="https://www.python.org/ftp/python/${VER}/"
SRCDIR="Python-${VER}"
SRCTGZ="${SRCDIR}.tar.xz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -c $SRCURL
}
__unpacksrc(){
    tar xJf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS \
	--enable-shared	\
	--with-ensurepip	\
	--with-system-expat	\
	--with-system-ffi
}
__compilesrc(){
    make $MAKEOPTS
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
    #ln -sv python3 $DEST/usr/bin/python
}
