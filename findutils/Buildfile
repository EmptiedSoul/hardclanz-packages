PACKAGE="findutils"
VER="4.7.0"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DEPENDS=(glibc bash)
CONFLICTS=()

URL="http://ftp.gnu.org/gnu/findutils/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.xz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -q $SRCURL
}
__unpacksrc(){
    tar xJf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS	\
	--localstatedir=/var/lib/locate	
}
__compilesrc(){
    make $MAKEOPTS CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS"
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
