PACKAGE="libsasl"
VER="2.1.27"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DEPENDS=(openssl)
CONFLICTS=()

URL="https://github.com/cyrusimap/cyrus-sasl/releases/download/cyrus-sasl-${VER}/"
SRCDIR="cyrus-sasl-${VER}"
SRCTGZ="${SRCDIR}.tar.gz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -q $SRCURL
}
__unpacksrc(){
    tar xzf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS
}
__compilesrc(){
    make $MAKEOPTS CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS"
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
