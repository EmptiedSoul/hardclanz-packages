PACKAGE="acl"
VER="2.2.53"
CRYPT="key"

ARCH="installer"
ACCESS="restricted"

DEPENDS=(attr)
CONFLICTS=()

URL="http://download.savannah.gnu.org/releases/acl/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.gz"
SRCURL="${URL}${SRCTGZ}"
__getsrc(){
	wget -q $SRCURL
}
__unpacksrc(){
	tar xvzf $SRCTGZ
}
__preparesrc(){
	./configure $CONFIGUREOPTS
}
__compilesrc(){
	make $MAKEOPTS CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS"
}
__installsrc(){
	make $MAKEOPTS DESTDIR=$DEST install
}
