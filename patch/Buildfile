PACKAGE="patch"
VER="2.7.6"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DESCRIPTION="Apply patches"

DEPENDS=(glibc attr)
CONFLICTS=()

URL="http://ftp.gnu.org/gnu/patch/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.xz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -q $SRCURL
}
__unpacksrc(){
    tar xJf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS
}
__compilesrc(){
    make $MAKEOPTS
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
