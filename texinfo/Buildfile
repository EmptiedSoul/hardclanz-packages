PACKAGE="texinfo"
VER="6.7"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DEPENDS=(ncurses gzip perl bash)
CONFLICTS=()

URL="http://ftp.gnu.org/gnu/texinfo/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.xz"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -q $SRCURL
}
__unpacksrc(){
    tar xJf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS
}
__compilesrc(){
    make $MAKEOPTS CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS"
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
