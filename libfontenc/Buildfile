PACKAGE="libfontenc"
VER="1.1.4"

ARCH="installer"
ACCESS="restricted"
CRYPT="key"

DESCRIPTION="XORG Font Encoding library"

DEPENDS=(zlib)
CONFLICTS=()

URL="https://x.org/releases/individual/lib/"
SRCDIR="${PACKAGE}-${VER}"
SRCTGZ="${SRCDIR}.tar.bz2"
SRCURL="${URL}${SRCTGZ}"

__getsrc(){
    wget -c $SRCURL
}
__unpacksrc(){
    tar xjf $SRCTGZ
}
__preparesrc(){
    ./configure $CONFIGUREOPTS \
	--with-fontrootdir=/usr/share/fonts/X11

}
__compilesrc(){
    make $MAKEOPTS
}
__installsrc(){
    make $MAKEOPTS DESTDIR="$DEST" install
}
